<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Image</th> 
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url(:thumb) %></td> 
        <td><%= product.price %></td>
        <td><%= product.status %></td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
