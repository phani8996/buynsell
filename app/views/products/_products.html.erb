<div class="row">
                    <% @products.each do |product| %>
                    <div class="col-sm-3  col-lg-3 col-md-3">
                        <%= link_to "Follow", product_followers_path(:follower_id => current_user), :method => :post %>
                        <div class="thumbnail">
                        
                            <%= image_tag product.image.url(:medium),{class:"img-responsive images"} %>
                            <div class="caption">
                                <h4 class="pull-right"><b>Rs.<%= product.price %></b></h4>
                                <h4><%= link_to 'Show', product %>
                                </h4>
                                <h4><%= link_to 'Make an Offer', product %>
                                </h4>
                                <p><strong>Name:</strong> <%= product.name %></span></p>
                                <% if !product.description.blank? %>
                                    <p><strong>Description:</strong> <%= product.description %></p>
                                <% end %>
                               
                            
                            </div>
                            
                            
                        </div>
                    </div>
                    <% end %>
</div>   