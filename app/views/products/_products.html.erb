
<div class="row">
    <% @products.each do |product| %>
        <div class="col-sm-3  col-lg-3 col-md-3">
        <div class="thumbnail">
            
            <div class="caption">
                <h4 class="pull-right"><b>Rs.<%= product.price %></b></h4>
                <h4><%= link_to 'Show', product %></h4>
                <h4><%= link_to 'Make bid', make_offer_path,  {:remote => true, 'data-toggle'=> "modal", 'data-target' => '#mymodal', id:'adds' }  %></h4>
                
                <p><strong>Name:</strong> <%= product.name %></span></p>
                <% if !product.description.blank? %>
                    <p><strong>Description:</strong> <%= product.description %></p>
                <% end %>
            </div>
        </div>
        </div>
    <% end %>
</div>   

