<div class="row">
    <% @products.each do |product| %>
        <div class="col-sm-3  col-lg-3 col-md-3">
        <div class="thumbnail">
            <%=link_to image_tag(product.pictures.first.image.url(:small)) , product.pictures.first.image.url, :class =>"zoom img-responsive images"%>
            <%#= image_tag product.pictures.first.image.url(:small),{class:"img-responsive images"} %>
            <div class="caption">
                <h4 class="pull-right"><b>Rs.<%= product.price %></b></h4>
                <h4><%= link_to 'Show', product %></h4>
                <h4><button type="button"  class="btn btn-primary btn-default"data-toggle="modal" data-target="#mymodal" id="adds" data-uni=<%=product.id%>>Launch modal</button></h4>
                <p><strong>Name:</strong> <%= product.name %></span></p>
                <p><strong>Description:</strong>
                <% if !product.description.blank? %>
                     <%= product.description %></p>
                <% end %>
            </div>
        </div>
        </div>
    <% end %>
</div>   

<script type="text/javascript">
	
jQuery(function($){
	
	$('a.zoom').easyZoom();

});

</script>
