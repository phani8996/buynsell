<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

  <%= image_tag @product.image.url(:original) %>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Reason:</strong>
  <%= @product.reason %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user_id %>
</p>



<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>



<h3>Listing Comments</h3>

<table>
  <thead>
    <tr>
      <th>Message</th> 
    </tr>
  </thead>

  <tbody>
    <% @product.comments.each do |comment| %>
      <tr>
        <td><%= comment.message %></td>

      </tr>
    <% end %>
  </tbody>
</table>
 
<%= form_for [@product, @comment] do |f| %>
   <%= f.text_area :message %>
   <%= f.submit "Post Comment" %>
<% end %>
















