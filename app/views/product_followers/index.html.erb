<p id="notice"><%= notice %></p>

<h1>Listing Product Followers</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Follower</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_followers.each do |product_follower| %>
      <tr>
        <td><%= product_follower.product_id %></td>
        <td><%= product_follower.follower_id %></td>
        <td><%= link_to 'Show', product_follower %></td>
        <td><%= link_to 'Edit', edit_product_follower_path(product_follower) %></td>
        <td><%= link_to 'Destroy', product_follower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

