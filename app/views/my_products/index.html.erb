<% if !@product.blank? %>
  <table class="table">
    <thead>
     <tr>
      <th>Image</th> 
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Reason</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td><%= image_tag product.pictures.first.image.url(:thumb) %></td> 
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.reason %></td>
        <td><%= product.status %></td>
        <td><%= link_to 'Show', product ,:class => "btn btn-primary btn-default"%>
        <% if logged_in? %>
          <%= link_to 'Destroy', product ,:class => "btn btn-primary btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<%= link_to 'Back', products_path %>

