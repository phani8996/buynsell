<% if !@product.blank? %>
<style>
.table tbody>tr>td.vert-align
{
    vertical-align: middle;

} 

    n_sold{color:yellowgreen;}
    sold{color:red;}
</style>
<div class="table-responsive" >
  <table class="table table-hover "  style=" text-align:center; border:1px solid rgba(0,0,0,0.1);">
    <thead style="font-size:20px;background-color:rgba(0,0,0,0.08);color:black; box-shadow: inset 0px 0px 10px rgba(0,0,0,0.09);">
     <tr>
      <th class="text-center" style="font-weight:200;">Image</th> 
      <th class="text-center" style="font-weight:200;">Name</th>
      <th class="text-center" style="font-weight:200;">Price</th>
      <th class="text-center" style="font-weight:200;">Description</th>
      <th class="text-center" style="font-weight:200;">Reason</th>
      <th class="text-center" style="font-weight:200;">Status</th>
      <th class="text-center" style="font-weight:200;" colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td class="vert-align"><%= image_tag product.pictures.first.image.url(:thumb) %></td> 
        <td class="vert-align"><%= product.name %></td>
        <td class="vert-align"><%= product.price %></td>
        <td class="vert-align"><%= product.description %></td>
        <td class="vert-align"><%= product.reason %></td>
        <td class="vert-align" style="color:yellowgreen;"><%= product.status %></td>
        <td class="vert-align"><%= link_to 'Show', product ,:class => "btn btn-primary btn-default",:style => "color:white" %>
        <% if logged_in? %>
          <%= link_to 'Destroy', product ,:class => "btn btn-primary btn-danger",:style => "color:white", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<% end %>
<%= link_to 'Back', products_path,:class => "btn btn-default" %>

