<% if !@product.blank? %>
  <table>
    <thead>
     <tr>
      <th>Image</th> 
      <th>Price</th>
      <th>Description</th>
      <th>Reason</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url(:thumb) %></td> 
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.reason %></td>
        <td>      <%= link_to product.status, {:controller =>'my_products', :action => 'toggles', :id=>@product.id}, class: "btn btn-medium btn-default" %>
<%= product.status %></td>
        <td><%= link_to 'Show', product %></td>
        <% if logged_in? %>
          <td></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% if product.status=='available' %>
                <%= button_to "Available",{ action: "edit" }%>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<%= link_to 'Back', products_path %>

