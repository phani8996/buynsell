<h1>Listing comments</h1>
 
<table>
 
 
<% @product.comments.each do |comment| %>
  <tr>
    
    <td><%= comment.message %></td>
   
   <% if !comment.message.blank? %> <td><%= link_to "Remove", [comment.product,comment], method: :delete, data: { confirm: "Are you sure?" } %></td><% end %>
  </tr>
<% end %>
</table>
 
